<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LidoApp" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="titleTextColor">@color/black</item>
        <item name="colorPrimary">@android:color/holo_red_dark</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@android:color/black</item>
        <item name="colorSecondaryVariant">@android:color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:itemTextAppearance">@style/CustomTextMenu</item>
        <item name="android:itemBackground">@color/black</item>
    </style>

    <style name="CustomTextMenu" parent="android:TextAppearance.DeviceDefault.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/holo_red_dark</item>

    </style>

</resources>