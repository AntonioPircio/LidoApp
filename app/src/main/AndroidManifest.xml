<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.unimol.lidoapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ombrelloni"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LidoApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity android:name=".UI.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UI.Register"
            android:exported="true">
        </activity>
        <activity android:name=".UI.Home"
            android:exported="true">
        </activity>
        <activity android:name=".UI.Reserve"
            android:exported="true">
        </activity>
        <activity android:name=".UI.UserInfo"
            android:exported="true">
        </activity>
        <activity android:name=".UI.DeleteUser"
            android:exported="true">
        </activity>
        <activity android:name=".UI.DeleteReservation"
            android:exported="true">
        </activity>
        <activity android:name=".UI.ForgotPassword"
            android:exported="true">
        </activity>
        <activity android:name=".UI.ValidateOTP"
            android:exported="true">
        </activity>
        <activity android:name=".UI.ChangePassword"
            android:exported="true">
        </activity>
    </application>
</manifest>