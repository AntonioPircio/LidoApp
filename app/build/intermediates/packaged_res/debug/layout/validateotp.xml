<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0A0A"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    tools:context="com.unimol.lidoapp.UI.ForgotPassword">

    <EditText
        android:id="@+id/otpBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#C62020"
        android:hint="OTP"
        android:textColorHint="#C62020"
        android:textColor="#C62020"/>

    <Button
        android:id="@+id/otpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#BF1B1B"
        android:text="INSERISCI OTP"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/setNewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="IMPOSTA LA NUOVA PASSWORD"
        android:textColor="#C62020"
        android:textSize="20dp" />
</LinearLayout>