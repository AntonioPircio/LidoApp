<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0E0E0E"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    tools:context="com.unimol.lidoapp.UI.DeleteUser">

    <EditText
        android:id="@+id/mailBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#9F1414"
        android:hint="Email"
        android:textColorHint="#C62020"
        android:textColor="#C62020"/>

    <Button
        android:id="@+id/deleteUserButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#C62020"
        android:text="CANCELLA ACCOUNT"
        android:textColor="@color/black"/>

</LinearLayout>